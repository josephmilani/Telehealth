@{
    ViewBag.Title = "Login";
}

<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <h2>Login</h2>
    <div>
        <input class="form-control col-sm-12" id="login_username" placeholder="Username" style="margin-bottom: 5px;" />
        <input type="password" class="form-control col-sm-12" id="login_password" placeholder="Password" style="margin-bottom: 5px;" />
        <button type="submit" class="btn btn-primary"">Sign In</button>
    </div>
</div>
